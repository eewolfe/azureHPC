{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "string"
    },
    "storageAccount": {
      "type": "string",
      "metadata": {
         "description": "Name of Storage Account containging the scripts to be run."
      },
      "defaultValue": ""
    },
    "storageKey": {
      "type": "string",
      "metadata": {
         "description": "Key for Storage Account containging the scripts to be run."
      },
      "defaultValue": ""
    },
    "numberofusers": {
      "type": "string",
      "metadata": {
         "description": "number of user IDs to provision."
      },
      "defaultValue": ""
    }
  },
  "variables": {
    "ssSetupScript": "seisspace-setup.sh",
    "extensionApiVersion": "2015-06-15"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'), '/ext')]",
      "apiVersion": "[variables('extensionApiVersion')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
            "[concat(parameters('_artifactsLocation'), 'custom/', parameters('_artifactsLocationSasToken'))]"
          ],
          "timestamp": 12345
        },
        "protectedSettings": {
          "commandToExecute": "[concat('bash ', 'custom/', variables('ssSetupScript'), ' ', parameters('storageAccount'),' ', parameters('storageKey'),' ', parameters('numberofusers'))]"
      }
    }
    }]
}
